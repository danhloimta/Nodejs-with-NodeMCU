extends layout

block content
    // Top navbar START
    nav.navbar.fixed-top.border-bottom
      a.navbar-brand.pt-0.px-lg-3.px-1.mr-0(href='#')
        img(src='assets/images/symbiot-delta.svg', alt='SYMBIOT Delta')
      .ml-auto
        .navbar-nav.navbar-icons.flex-row
          .nav-item
            button#alerts-toggler.btn.btn-link.nav-link(title='Alerts', type='button', data-alerts='3', data-toggle='modal', data-target='#alertsModal')
              svg.icon-sprite
                use(xlink:href='assets/images/icons-sprite.svg#alert')
                svg.text-danger
                  use.icon-dot(xlink:href='assets/images/icons-sprite.svg#icon-dot')
          .nav-item
            a.nav-link(href='settings.html')
              svg.icon-sprite
                use(xlink:href='assets/images/icons-sprite.svg#settings')
          .nav-item
            a.nav-link(href='login.html')
              svg.icon-sprite
                use(xlink:href='assets/images/icons-sprite.svg#logout')
    // Top navbar END
    // Main content START
    .container-fluid.px-4.px-sm-5
        .row
            .col-12
              .card
                .card-body.d-flex.flex-wrap.align-items-center.p-0
                  .col-sm-12.col-lg-7.p-0
                    .ratio-container.ratio-8-6.house-bg
                      svg(xmlns:xlink='http://www.w3.org/1999/xlink', viewBox='0 0 800 600')
                        defs
                          radialgradient#half-radial(fx='50%', fy='0%', r='50%')
                            stop(offset='0', stop-color='#ffff9f', stop-opacity='1')
                            stop(offset='1', stop-color='#ffff9f', stop-opacity='0')
                        g#house-armed(style='opacity: 0;')
                          rect(x='194', y='356', opacity='0.75', fill='#d40050', width='86', height='138')
                          path(fill='#ffffff', d='M249.5,424v-4c0-6.63-5.37-12-12-12s-12,5.37-12,12v4h-4v22h32v-22H249.5z M239.5,435.45V442h-4v-6.55c-1.19-0.69-2-1.97-2-3.45c0-2.21,1.79-4,4-4s4,1.79,4,4C241.5,433.48,240.7,434.75,239.5,435.45z M243.5,424h-12v-4c0-3.31,2.69-6,6-6s6,2.69,6,6V424z')
                        g#house-disarmed(style='opacity: 1;')
                          rect(x='194', y='356', opacity='0.75', fill='#97bf0d', width='86', height='138')
                          path(fill='#ffffff', d='M249.5,424v-6c0-6.63-5.37-12-12-12s-12,5.37-12,12h6c0-3.31,2.69-6,6-6s6,2.69,6,6v6h-22v22h32v-22H249.5zM239.5,435.45V442h-4v-6.55c-1.19-0.69-2-1.97-2-3.45c0-2.21,1.79-4,4-4s4,1.79,4,4C241.5,433.48,240.7,434.75,239.5,435.45z')
                        rect#doorway-light(x='194', y='356', fill='url(#half-radial)', width='86', height='43')
                        rect#garage-light(x='328', y='373', fill='url(#half-radial)', width='260', height='130')
                        line#roll-doors(aria-valuenow='0', aria-valuemin='0', aria-valuemax='12', fill='none', stroke='#ffffff', stroke-width='250', stroke-dasharray='20 5 20 5 20 5 20 5 20 110', x1='458', y1='380', x2='458', y2='500')
                  .col-sm-12.col-lg-5.p-3
                    ul.list-group.list-group-flush.border-bottom-0
                      li.list-group-item.d-flex.lock.px-0.px-sm-3(data-unit='switch-house-lock-pin')
                        .title-status
                          h4 Security system
                          p.status
                            span.arm
                        label.switch.ml-auto.mt-2
                          input#switch-house-lock-pin(type='checkbox')
                      li.list-group-item.d-flex.px-0.px-sm-3(data-unit='garage-doors')
                        .title-status
                          h4 Garage doors
                          p.status Closed
                        .ml-auto.mt-2.timer-controls(data-controls='garage-doors')
                          button.btn.btn-primary.roll-doors-control(data-action='open', type='button') Open
                          button.btn.btn-secondary.roll-doors-control(data-action='pause', type='button') Pause
                          button.btn.btn-secondary.roll-doors-control(data-action='resume', type='button') Resume
                          button.btn.btn-primary.roll-doors-control(data-action='close', type='button') Close
                      li.list-group-item.d-flex.py-4.px-0.px-sm-3(data-unit='switch-light-doorway')
                        .title-status
                          h5 Doorway light
                        label.switch.ml-auto
                          input#switch-light-doorway(type='checkbox')
                      li.list-group-item.d-flex.py-4.px-0.px-sm-3(data-unit='switch-light-garage')
                        .title-status
                          h5 Garage light
                        label.switch.ml-auto
                          input#switch-light-garage(type='checkbox')
        .row
            .col-sm-12.col-md-6.col-xl-4
              // Interior lights  START
              .card(data-unit-group='switch-lights')
                .card-body
                  h3.card-title Đèn - trong nhà
                ul.list-group.list-group-flush
                  li.list-group-item.d-flex.active(data-unit='switch-light-1')
                    svg.icon-sprite
                      use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                    h5 Bếp
                    label.switch.ml-auto.checked
                      input#switch-light-1.kitchen(type='checkbox', checked='')
                    .info-holder.info-rb(style='right:40px;')
                      div(data-toggle='popover-all', data-content='Checkbox element using localStorage to remember the last status.', data-original-title='Switch ON/OFF', data-container='body', data-placement='top', data-offset='0,-6')
                  li.list-group-item.d-flex(data-unit='switch-light-2')
                    svg.icon-sprite
                      use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                    h5 Phòng khách
                    label.switch.ml-auto
                      input#switch-light-2(type='checkbox')
                  li.list-group-item.d-flex(data-unit='switch-light-3')
                    svg.icon-sprite
                      use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                    h5 Phòng ngủ
                    label.switch.ml-auto
                      input#switch-light-3(type='checkbox')
                  li.list-group-item.d-flex(data-unit='switch-light-4')
                    svg.icon-sprite
                      use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                    h5 Nhà tắm
                    label.switch.ml-auto
                      input#switch-light-4(type='checkbox')
                .card-body
                  .lights-controls(data-controls='switch-lights')
                    button.btn.btn-secondary.lights-control(data-action='all-on', type='button')
                      | All 
                      strong ON
                    button.btn.btn-primary.lights-control(data-action='all-off', type='button')
                      | All 
                      strong OFF
              // Interior lights  END
            .col-sm-12.col-md-6.col-xl-4
              // Exterior lights  START
              h3.card-title.my-3 Đèn - bên ngoài
              .card(data-unit='switch-light-6')
                .card-body.d-flex.flex-row.justify-content-start
                  svg.icon-sprite
                    use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                  h5 Cửa nhà
                  label.switch.ml-auto
                    input#switch-light-6(type='checkbox')
              .card(data-unit='switch-light-7')
                .card-body.d-flex
                  svg.icon-sprite
                    use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                  h5 Ngoài sân
                  label.switch.ml-auto
                    input#switch-light-7(type='checkbox')
              .card(data-unit='switch-light-8')
                .card-body.d-flex
                  svg.icon-sprite
                    use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                  h5 Bể bơi
                  label.switch.ml-auto
                    input#switch-light-8(type='checkbox')
              .card(data-unit='switch-light-9')
                .card-body.d-flex
                  svg.icon-sprite
                    use(xlink:href='assets/images/icons-sprite.svg#bulb-eco')
                  h5 Garage
                  label.switch.ml-auto
                    input#switch-light-9(type='checkbox')
              // Exterior lights  END
            .col-sm-12.col-md-6.col-xl-4
              // Appliances  START
              .card
                .card-body
                  h3.card-title Thiết bị gia dụng
                hr.my-0
                // Washing machine  START
                ul.list-group.borderless.active(data-unit='wash-machine')
                  li.list-group-item.d-flex.pb-0
                    svg.icon-sprite.icon-1x
                      use(xlink:href='assets/images/icons-sprite.svg#wash-machine')
                    h5 Máy bơm
                    p.ml-auto.status ON
                  li.list-group-item.d-flex.pt-0.pb-4
                    p.entry Thời gian sử dụng
                    p#wash-machine.ml-auto.mb-0
                // Washing machine  END
                hr.my-0
                // Fridge  START
                ul.list-group.borderless.active(data-unit='home-fridge')
                  li.list-group-item.d-flex.pb-0
                    svg.icon-sprite.icon-1x
                      use(xlink:href='assets/images/icons-sprite.svg#home-fridge')
                    h5 Tủ lạnh
                    p.ml-auto.status ON
                  li.list-group-item.d-flex.pt-0.pb-4
                    p.entry Nhiệt độ
                    p.ml-auto.mb-0
                      | 35
                      sup °F
                // Fridge  END
                hr.my-0
                // TV  START
                ul.list-group.borderless(data-unit='tv-lcd')
                  li.list-group-item.d-flex
                    svg.icon-sprite.icon-1x
                      use(xlink:href='assets/images/icons-sprite.svg#tv-lcd')
                    h5 TV
                    p.ml-auto.status OFF
                // TV  END
                // Appliances  END
        .row
            .col-sm-12.col-md-6
                // Security system START
                .card.lock
                  .card-body.d-flex.flex-wrap
                    .title-status
                      h4 Tin nhắn
                      p.status
                        span.arm
                    .list-message
                      .single-message
                        .user-ava
                          img(src='assets/images/user1.png', alt='')
                        .user-mess
                          span Lorem ipsum dolor sit amet.
                        .mess-time
                          span 20 minutes
                      .single-message
                        .user-ava
                          img(src='assets/images/user1.png', alt='')
                        .user-mess
                          span Lorem ipsum dolor sit amet.
                        .mess-time
                          span 20 minutes
                      .single-message
                        .user-ava
                          img(src='assets/images/user1.png', alt='')
                        .user-mess
                          span Lorem ipsum dolor sit amet.
                        .mess-time
                          span 20 minutes
                      .single-message
                        .user-ava
                          img(src='assets/images/user1.png', alt='')
                        .user-mess
                          span Lorem ipsum dolor sit amet.
                        .mess-time
                          span 20 minutes
                // Security system END
            .col-sm-12.col-md-6
                // Garage-doors START
                .card.lock
                  .card-body.d-flex.flex-wrap
                    .title-status
                        textarea.form-control.input-text
                        button.btn.btn-primary.btn-add Thêm
    block js
      script(src='../js/app.bundle.js')



            